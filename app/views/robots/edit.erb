<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/main.css"  type="text/css" />

</head>
<body>
  <header>
    <div id="wrapper" style="width:100%; text-align:center">
      <img src="https://i.imgur.com/w76WOh2.gif" alt="banner" height="300px" align="middle" width="100%">
    </div>
    </header>
    <div class="nav"  width="100px">
  <div class="navbar">
    <a href="/">Home</a>
    <div class="dropdown">
      <button class="dropbtn">Robots
        <i class="la la bub"></i>
      </button>
      <div class="dropdown-content" id="drop-down">
        <a href="/robots/new">Create a New Robot</a>
        <a href="/robots">View all robots</a>
      </div>
    </div>
  </div><br>
  <div class="card-2">
      <div class="container">
<form action="/robots/<%= @robot.id %>" method="post">
        <p>Edit robot data</p>
Name :         <input type='text' name='robot[name]' class="input" class="input" value="<%= @robot.name %>"/><br/>
City :           <input type='text' name='robot[city]' class="input" class="input" value="<%= @robot.city %>"/><br/>
State :        <input type='text' name='robot[state]' class="input" class="input" value="<%= @robot.state %>"/><br/>
Department :        <input type='text' name='robot[department]' class="input" class="input" value="<%= @robot.department %>"/><br/>

        <input type="hidden" name='robot[updated_at]' class="input" style="width: 300px;" class="input" value="<%= Time.now %>"/><br/>
        <input type='submit'/>
        </form>
</div>
</div>
</body>
</html>
